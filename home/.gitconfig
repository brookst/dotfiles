# See also .config/git/config
[include]
        # For username / creds / etc
        path = ~/.gitconfig.local
[user]
        name = Tim Brooks
        email = brooks@cern.ch
        signingkey = 0C66D5A7
[github]
        user = brookst
[core]
        editor = vim
        pager = less -FX
        whitespace = trailing-space tab-in-indent tabwidth=4
        autocrlf = input
[color]
        ui = auto
[diff]
        tool = vimdiff
        noprefix = true
        renames = copies
        compactionHeuristic = true
[difftool]
        prompt = false
        trustExitCode = true
[diff "exif"]
        textconv = exiftool
[branch]
        autosetuprebase = always
[init]
        templatedir = ~/.git_template
[merge]
        tool = vimdiff
        stat = true
[advice]
        statusHints = false
        pushNonFastForward = false
[alias]
        s = status
        p = pull
        l = log
        d = diff
        dt = difftool
        ci = commit
        co = checkout
        pop = stash pop
        vimdiff = difftool

