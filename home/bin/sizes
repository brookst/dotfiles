#!/bin/bash
#
# sizes - sorts files sizes in human readable form
# Tim Brooks - <brooks@skoorb.net>
#

OUT=$(mktemp) || { echo "Failed to create temp file"; exit 1; }
trap "rm -f ${OUT}" EXIT
du -hs * > ${OUT}
cat ${OUT} | sed -n -e's/^\([ ]*[0-9][0-9.]*\t\)/\1/p' | sort -n
cat ${OUT} | sed -n -e's/^\([ ]*[0-9][0-9.]*K\)/\1/p' | sort -n
cat ${OUT} | sed -n -e's/^\([ ]*[0-9][0-9.]*M\)/\1/p' | sort -n
cat ${OUT} | sed -n -e's/^\([ ]*[0-9][0-9.]*G\)/\1/p' | sort -n
