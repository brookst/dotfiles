# Specific machine config
Host svn.cern.ch
  ForwardAgent no
  GSSAPITrustDns yes
  CheckHostIP no
  ForwardX11 no
  ForwardX11Trusted no

# lxplus is a round robin DNS entry and so has different IPs
Host lxplus.cern.ch
  GSSAPITrustDns yes
  CheckHostIP no

Host lxplus7.cern.ch
  GSSAPITrustDns yes
  CheckHostIP no

Host skoorb.net
  ServerAliveInterval 60
  ForwardX11 no
  ForwardX11Trusted no

Host server.skoorb.net
  ServerAliveInterval 300
  ServerAliveCountMax 2

Host pi.skoorb.net
  ServerAliveInterval 300
  ServerAliveCountMax 2

# Domain defaults
Host *.cern.ch
  PasswordAuthentication yes
  PubkeyAuthentication no
  PreferredAuthentications gssapi-with-mic,password
  GSSAPIAuthentication yes
  GSSAPIDelegateCredentials yes
  ForwardX11 yes
  ForwardAgent no

Host *.pp.rhul.ac.uk
  ForwardX11 yes
  ForwardX11Trusted yes
  ForwardAgent yes

Host *skoorb.net
  ForwardX11 yes
  ForwardX11Trusted yes
  ForwardAgent yes

# Global defaults
# The first match wins, so this section goes last so it can be overridden
Host *
  Protocol 2
  ControlMaster auto
  ControlPath /tmp/%r@%h:%p
  ControlPersist 10m

