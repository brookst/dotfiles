# Specific machine config
Host svn.cern.ch
  ForwardAgent no
  GSSAPITrustDns yes
  CheckHostIP no
  ForwardX11 no
  ForwardX11Trusted no

Host lxplus.cern.ch
  GSSAPITrustDns yes
  CheckHostIP no

Host skoorb.net
  ServerAliveInterval 60

Host server.skoorb.net
  ServerAliveInterval 300
  ServerAliveCountMax 2

Host pi.skoorb.net
  ServerAliveInterval 300
  ServerAliveCountMax 2

# Domain defaults
Host *.cern.ch
  PasswordAuthentication no
  GSSAPIAuthentication yes
  GSSAPIDelegateCredentials yes
  ForwardAgent no

Host *.pp.rhul.ac.uk
  ForwardX11 yes
  ForwardX11Trusted yes
  ForwardAgent yes

Host *skoorb.net
  ForwardX11 yes
  ForwardX11Trusted yes
  ForwardAgent yes

# Global defaults
# The first match wins, so this section goes last so it can be overridden
Host *
  Protocol 2
  ForwardAgent no
  ForwardX11 no
  ForwardX11Trusted no
  GSSAPIAuthentication no
  GSSAPIDelegateCredentials no
  GSSAPITrustDns no
  ControlMaster auto
  ControlPath /tmp/%r@%h:%p
  ControlPersist 10m

